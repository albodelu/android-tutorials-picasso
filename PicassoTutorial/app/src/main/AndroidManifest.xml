<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="io.futurestud.tutorials.picasso"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".ui.activities.UsageExampleSimpleLoading"
            android:label="Simple Loading">

        </activity>

        <activity
            android:name=".ui.activities.UsageExampleListView"
            android:label="ListView Example"/>

        <activity
            android:name=".ui.activities.UsageExampleGridViewAdapter"
            android:label="GridView Example"/>

        <activity
            android:name=".ui.activities.UsageExamplePlaceholdersAndErrors"
            android:label="Placeholders"/>

        <activity
            android:name=".ui.activities.UsageExampleImageResizing"
            android:label="Image Manipulation">
        </activity>

        <activity
            android:name=".ui.activities.UsageExampleRequestPriority"
            android:label="Request Priority"/>

        <activity
            android:name=".ui.activities.UsageExampleRotationTransformation"
            android:label="Rotation and Transformation"/>

        <activity
            android:name=".ui.activities.UsageExampleTargetsAndRemoteViews"
            android:label="Rotation and Transformation"/>

        <activity
            android:name=".ui.activities.UsageExampleLoggingAndStats"
            android:label="Cache Indicators, Logging and Stats"/>

        <activity
            android:name=".ui.activities.UsageExamplePicassoBuilderBasics"
            android:label="Picasso.Builder Basics"/>

        <activity
            android:name=".ui.activities.UsageExamplePicassoBuilderRequestHandler"
            android:label="Custom Request Handlers"/>

        <activity
            android:name=".ui.activities.UsageExampleAdvancedListView"
            android:label="Advanced ListView"/>

        <activity
            android:name=".ui.activities.OkHttp3Example"
            android:label="OkHttp3"/>
        <activity android:name=".ui.activities.UsageExampleCatchErrors"/>

    </application>

</manifest>
